<resources>

    <!-- Базовая тема приложения -->
    <style name="Theme.CalorieMaster" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Основные цвета темы -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Настройка шрифтов и других атрибутов темы -->
        <item name="android:fontFamily">@font/roboto_italic</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="android:editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
    </style>

</resources>
